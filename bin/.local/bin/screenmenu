#!/bin/sh

# Options for powermenu

both="both"
laptop="laptop"
monitor="monitor"

if [ "$#" = "0" ]; then
	# Get answer from user via dmenu
	. "${HOME}/.cache/wal/colors.sh"
	selected_option=$(echo "$both
$laptop
$monitor" | dmenu -h 23 -nb "$color0" -nf "$color15" -sb "$color1" -sf "$color15"
	)
else
	selected_option=$1
fi

# Do something based on selected option
if [ "$selected_option" = "$both" ]; then
	if [ "$2" = "--left" ]; then
		xrandr --output eDP-1 --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI-1 --primary --mode 2560x1080 --pos 1920x0 --rotate normal
	else                                                                                             
		xrandr --output eDP-1 --mode 1920x1080 --pos 2560x0 --rotate normal --output HDMI-1 --primary --mode 2560x1080 --pos 0x0 --rotate normal
	fi
elif [ "$selected_option" = "$monitor" ]; then
	xrandr --output eDP-1 --off --output HDMI-1 --primary --mode 2560x1080 --pos 0x0 --rotate normal
elif [ "$selected_option" = "$laptop" ]; then
	xrandr --output eDP-1 --primary --mode 1920x1080 --pos 2560x0 --rotate normal --output HDMI-1 --off
fi

setxkbmap -layout us -option caps:escape
~/.fehbg
