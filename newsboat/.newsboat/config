browser "xdg-open"
notify-program newsboat-update
notify-format "%d new articles found!\n%n unread articles amongst %f unread feeds."

# key bindings
bind-key j down
bind-key k up
bind-key h quit
bind-key l open

auto-reload yes
max-items 100

feedlist-format "%?T?  %n %8u %t &%t?"

color info             black yellow bold
color listfocus        black yellow bold
color listfocus_unread white yellow bold
